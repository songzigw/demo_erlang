% -*- mode: erlang -*-
{require_min_otp_vsn, "R17"}.

{erl_opts, [debug_info,
			{src_dirs, ["src"]},
            {platform_define, "R15", 'gen_tcp_r15b_workaround'},
            {platform_define, "(R14|R15|R16B-)", 'crypto_compatibility'}]}.
{cover_enabled, true}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.

{dialyzer_opts, [{warnings, [no_return,
                             no_unused,
                             no_improper_lists,
                             no_fun_app,
                             no_match,
                             no_opaque,
                             no_fail_call,
                             error_handling,
                             race_conditions,
                             behaviours,
                             unmatched_returns]}]}.
%{deps_dir, ["deps"]}.

{deps, [
	{esockd, "2.*", {git, "git://github.com/emqtt/esockd.git", {branch, "master"}}}
]}.
